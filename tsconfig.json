{
	"compilerOptions": {
		// "target": "esnext",
		// "module": "esnext",
		// "moduleResolution": "node",
		// "strict": false,
		// "jsx": "preserve",
		// "sourceMap": true,
		// "esModuleInterop": true,

		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"useDefineForClassFields": true,
		"resolveJsonModule": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"lib": [
			"esnext",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"@root/*": [
				"./*"
			],
		},
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}